@model IEnumerable<SurvivalPrep.DBModels.Item>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Shop</h1>

<table class="table" style="text-align: center; border: none">
    <tbody>
        <!-- https://stackoverflow.com/questions/9198549/razor-view-dynamic-table-rows -->
        @for (int i = 0; i < Model.Count(); i += 3)
        {
            <tr>
                @for (int j = 0; j < 3 && i + j < Model.Count(); j++)
                {
                    <td class="item-box">
                        <img src="~/files/image_1.png" style="width: 50%"/>
                        <br />
                        <b>@Html.DisplayFor(model => model.ElementAt(i + j).Name)</b>
                        <br />
                        <div class="info">
                            Cost: @Html.DisplayFor(model => model.ElementAt(i + j).Cost) &nbsp; &nbsp;
                            Score: @Html.DisplayFor(model => model.ElementAt(i + j).Score)
                        </div>
                        <input class="but" type="button" value="Buy" />
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
