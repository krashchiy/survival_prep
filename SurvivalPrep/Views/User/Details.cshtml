@model SurvivalPrep.DBModels.ApplicationUser

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>User Details</h1>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Total Score")
        </dt>
        <dd class="col-sm-10">
            @{
                var totalscore = 0;
                foreach (var i in Model.OwnedItems.ToList())
                {
                    totalscore = totalscore + i.Item.Score;
                }
            }
            @totalscore
        </dd>

    </dl>

    <h2> Inventory </h2>
    <div class="container">
        <div id="accordion">
            <div class="card-body text-dark">
                <table class="table table-bordered">
                    <tr class="table-header">
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Score Gained</th>
                    </tr>
                    @foreach (var item in Model.OwnedItems.ToList())
                    {
                        <tr>
                            <td>
                                @Html.DisplayName(item.Item.Name)
                            </td>
                            <td>
                                @Html.DisplayName(item.Quantity.ToString())
                            </td>
                            <td>
                                @Html.DisplayName((item.Item.Score * item.Quantity).ToString())
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>


